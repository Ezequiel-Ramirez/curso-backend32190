<h2 style="color:crimson;">Historial</h2>

<% if(productos.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: blue;"> <th>Nombre</th> <th>Precio</th> <th>Imagen</th> </tr>
            <% for (const producto of productos) {%>
            <tr>
                <td><%=producto.nombre%></td>
                <td><%=producto.precio%></td>
                <td><%=producto.imagen%></td>
            </tr>
            <%};%>
        </table>
    </div>
<% } else{ %>
    <h3 class="alert alert-danger">No hay productos</h3>
<% } %>

<div>
    <button class="btn btn-info" onclick="location.href='/'">Volver a Home</button>
</div>

